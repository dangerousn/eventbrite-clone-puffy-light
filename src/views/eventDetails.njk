{% extends "src/views/layout.njk" %}

{% block title %}{{event.title}}{% endblock %}

{% block mainContent %}

{% if err %}
<ul class="form-errors">

<li>
  Bad, bad email!
</li>

</ul>
{% endif %}

    <body class="bg-light">

    <!-- Google Tag Manager (noscript) -->
<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-WFVW5VF"
height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
<!-- End Google Tag Manager (noscript) -->

      <section class="jumbotron text-center">
        <div class="container">
           <img class="mb-4" src="https://www.teachingenglish.org.uk/sites/teacheng/files/styles/large/public/images/RS2779_153509972-low.jpg?itok=PxUf1CG7" alt="RSVPeasy Logo" width="72" height="72" >
            <h2 id="title">Event: {{event.title}}</h2>
            <p class="lead text-muted">Contribute & Register to this event</p>
            <hr class="my-4">
            <p>Push the button to donate now!</p>
            <a class="btn btn-dark align-middle" role="button" href="/donate">Donate now!</a>
        </div>
      </section>

      {% if "" != cc %}
      <div>
        REGISTERED! Your confirmation code is <b>{{cc}}</b>
      </div>
      {% endif %}



    <div class="container align-center text-center">
      <div>
        <img src="{{event.image_url}}" alt="event image" id="image" />
      </div>
      <div>
      <h1 class="text-white-50 bg-info text-center" id="title">{{event.title}}</h1>
      </div>
      <div>
        <span id="date">When: {{event.date}}</span>
      </div>
      <div>
        <span id="location">Where: {{event.location}}</span>
      </div>
      <hr class="my-4">
      <div>
      <form action="/events/{{ event.id }}" method="post">
        <input type="email" id="email" name="email" />
        <button class="btn btn-primary align-middle" type="submit" name="submit">Attend!</button>
      </div>
      <hr class="my-4">
      <div>
      <a class="h3" href="/donate" id="donate">Donate now!</a>
      </div>
    </div>


    <li class="event" id="event-0">
      <a href="/events/{{event.id}}" id="title">{{event.title}}</a>
      <br />
      <time>{{event.date}}</time>
    </li>

 <div>
  Attendees:
  <ul class="list-group" id="attendees">

    {% for attendee in attendees %}
            <li class="list-group-item">{{attendee.email}}</li>
      {% endfor %}

  </ul>
</div>



{% endblock %}
